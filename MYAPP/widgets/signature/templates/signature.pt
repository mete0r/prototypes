<div class="container-fluid">
  <div class="row">
    <div class="col-md-6">서명란</div>
    <div class="col-md-6"> </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <input id="${field.oid}" name="${field.name}" type="hidden" value="${cstruct}">
      <canvas id="${field.oid}-canvas" style="border:1px solid black"></canvas>
    </div>
    <div class="col-md-6">
      <button id="${field.oid}-clear" class="btn btn-default btn-sm">Clear</button>
    </div>
  </div>
  <script type="text/javascript">
    (function(){
      var field = document.getElementById('${field.oid}');
      var canvas = document.getElementById('${field.oid}-canvas');
      var signature_pad = new SignaturePad(canvas);
      var clear = document.getElementById('${field.oid}-clear');
      clear.dataset.signature_pad = signature_pad;
      $(clear).click(function(event){
        event.preventDefault();
        signature_pad.clear();
        field.value = '';
      });

      var cstruct = '${cstruct}';
      if (cstruct.length > 0) {
        signature_pad.fromDataURL(field.value);
      }
      signature_pad.onEnd = function() {
        field.value = signature_pad.toDataURL();
      };
    })();
  </script>
</div>
