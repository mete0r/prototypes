<div tal:define="
     oid oid|field.oid;
     true_val true_val|field.widget.true_val;"
     i18n:domain="deform">
  <p class="form-control-static"
     id="${oid}">
    <span tal:condition="cstruct == true_val"
          >☑</span>
    <span tal:condition="cstruct != true_val"
          >☐</span>
    <span tal:condition="hasattr(field, 'schema') and hasattr(field.schema, 'label')"
          tal:replace="field.schema.label" class="checkbox-label" ></span>
  </p>
</div>
