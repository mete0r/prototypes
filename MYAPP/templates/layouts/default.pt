<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title tal:content="layout.title"></title>
  </head>
  <body>
    <script tal:condition="layout.use_deform"
            type="text/javascript"
            src="${request.static_url('deform:static/scripts/deform.js')}"></script>

    <nav tal:replace="panel('navbar', brand_name=layout.brand_name, title=layout.navbar_title)"></nav>

    <div class="container">

      <div class="row"
           tal:condition="layout.flash_messages">
        <div class="alert alert-info" tal:repeat="message layout.flash_messages">
          ${message}
        </div>
      </div>

      <div class="row">
        <div class="col-md-8">
          <h1 class="content-title" tal:content="layout.title"></h1>
        </div>
        <div class="col-md-4">
        </div>
      </div>
      <div class="row">
        <div class="col-md-8">
          <div metal:define-slot="content"></div>
        </div>
        <div class="col-md-4">
          <div tal:replace="panel('sidebar')"></div>
        </div>
      </div>
    </div>

    <footer>
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="pull-right">
              Copyright &copy; 2015 mete0r
            </div>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
